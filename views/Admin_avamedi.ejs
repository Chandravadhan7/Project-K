                <% medicines.forEach(function(medicine) { %>
                    <tr>
                        <td><%= medicine.slno %></td>
                        <td><%= medicine.name %></td>
                        <td><%= medicine.type %></td>
                        <td><%= medicine.use.join(', ') %></td>
                        <td><%= medicine.stock %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5">No medicines available</td>
                </tr>
            <% } %>
