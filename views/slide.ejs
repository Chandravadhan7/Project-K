<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors Carousel</title>
    <style>
        
        .slideshow-container {
            width:81%;
            position: relative;
            margin: auto;
            overflow-y: hidden;
            background-color: #ffffff;
            overflow-y: hidden;
        }

        /* Hide the slides by default */
        .mySlides {
            display: none;
            
        }

        /* Next & previous buttons */
        .prev,
        .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            margin-top: -22px;
            padding: 16px;
            color: rgb(22, 22, 22);
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }

        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

        .prev:hover,
        .next:hover {
            background-color: #000080;
            color: wheat;
        }

        /* Caption text */
        .text {
            color: #f2f2f2;
            font-size: 15px;
            padding: 8px 12px;
            position: absolute;
            bottom: 8px;
            width: 100%;
            text-align: center;
        }

        /* Dots */
        .dot {
            cursor: pointer;
            height: 15px;
            width: 15px;
            margin: 0 2px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            transition: background-color 0.6s ease;
        }

        .active,
        .dot:hover {
            background-color: #717171;
        }

        /* Animation for fading */
        .fade {
            animation-name: fade;
            animation-duration: 1.5s;
        }

        @keyframes fade {
            from {
                opacity: .4
            }

            to {
                opacity: 1
            }
        }

        .mySlides {
            display: flex;
            flex-direction: row; /* Align doctor info in a row (horizontally) */
            justify-content: space-between;
            padding: 0px;
            border-radius: 10px;
            background: rgb(255, 255, 255);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .doctor-info {
            text-align: center;
            padding: 10px;
            flex: 1;
            background:  linear-gradient(to right, rgb(255, 255, 255), skyblue);
            margin-right: 20px;
            border: 1px solid rgb(180, 172, 172);
            border-radius: 2px;
        }
        
        .doctor-info h3{
            color: #483D8B;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
;
            font-size: 25px;
        }
        .doctor-info p{
            color: rgb(243, 18, 18);
            font-family: monospace;
            font-size: 20px;
        }
        .doctor-info button{
            background-color: springgreen;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid rgb(97, 226, 118);
            font-size: 15px;
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: navy;
            margin-bottom: 30px;
            
        }
        .doctor-info button:hover{
            cursor: pointer;
            color: white;
            background-color: 3CB371;
            transition: all 0.3s ease;
        }
        
    </style>
</head>

<body>

    <div class="slideshow-container">

        <div class="mySlides fade">
            <div class="doctor-info">
                <h3>Ms Megha Sajidev</h3>
                
                <p>Physiotherapy and Rehabilitation</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Nadia Abdul Rafeek</h3>
                
                <p>Homeopathy</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Sujith Kumar Kategar</h3>
                <p>Anaesthesia</p>
                <button>Book An Appointment</button>
            </div>
        </div>

        <div class="mySlides fade">
            <div class="doctor-info">
                <h3>Dr Ravi Shankar</h3>
                <p>Cardiology</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Ayesha Khan</h3>
                <p>Dermatology</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Rohan Gupta</h3>
                <p>Pediatrics</p>
                <button>Book An Appointment</button>
            </div>
        </div>

        <div class="mySlides fade">
            <div class="doctor-info">
                <h3>Dr Sara Fernandes</h3>
                <p>Oncology</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Arvind Rao</h3>
                <p>Neurology</p>
                <button>Book An Appointment</button>
            </div>
            <div class="doctor-info">
                <h3>Dr Tina Patel</h3>
                <p>Gynecology</p>
                <button>Book An Appointment</button>
            </div>
        </div>
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <br>

    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <script>
        let slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            let i;
            let slides = document.getElementsByClassName("mySlides");
            let dots = document.getElementsByClassName("dot");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";  // Hide all slides
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", ""); 
            }
            slides[slideIndex - 1].style.display = "flex"; 
        }

        setInterval(function () {
            plusSlides(1);
        }, 1500);  
    </script>

</body>

</html>